<div class="sidebar left">
    <div id="profile_left">
        <div id="profile_pic_container">
            <%= image_tag "player_placeholder.png", id: "profile_pic" %>
            <a href="#" id="edit_photo" class="edit_player_photo">
                edit photo
            </a>
        </div>
        <div id="upload_photo_modal" class="modal hide fade">
            <div id="upload_photo">
                <h3>Upload a new Profile Image</h1>
                <form method="post" enctype="multipart/form-data"  action="php/upload.php" autocomplete="off">
                    <input class="btn" type="file" name="images" id="images" />
                    <button type="submit"  id="btn1">Upload Photo</button>
                </form>
                <div id="response"></div>
                <%= image_tag "player_placeholder.png", id: "profile_preview" %>
                <p>
                    <button id="confirm_image" class="btn hide">Confirm Image</button>
                </p>
            </div>
        </div>

        <p id="profile_name">
            <%= best_in_place @member, :name, :type => :input, :activator => '#editName',
                :ok_button => "Submit", :ok_button_class => "btn btn-primary btnMargin"
            %>
        </p>
        <a id="editName" href="#" class="editThis editable">edit user name</a>


        <p class="profile_subtitle">
        <%= best_in_place @member, :slogan, :type => :input, :activator => '#editSlogan',
                :ok_button => "Submit", :ok_button_class => "btn btn-primary btnMargin",
                :nil => 'Slogan goes here'

        %>
        <br>
        </p>
        <a id="editSlogan" href="#" class="editThis editable">edit slogan</a>
    </div>
</div>