<div class="sidebar left">
    <div id="profile_left">
        <div id="profile_pic_container">
            <%= image_tag @member.profile_photo, id: "profile_pic" %>
            <a href="#" id="edit_photo" class="edit_player_photo">
                edit photo
            </a>
        </div>
        <%= render "modals/upload_profile_photo_modal" %>

        <p id="profile_name">
            <%= best_in_place @member, :name, :as => :input,
                :place_holder => 'username', :activator => '#editName' %>
            <a id="editName" href="#" class="editThis editable"><i class="glyphicon glyphicon-edit"></i></a>
        </p>

        <p class="profile_subtitle">
            <%= best_in_place @member, :slogan, :as => :textarea, :activator => '#editSlogan',
                    :place_holder => 'Slogan goes here' %>
            <a id="editSlogan" href="#" class="editThis editable"><i class="glyphicon glyphicon-edit"></i></a>
        </p>

        <%= link_to "View Your Profile", @member %>
    </div>
</div>