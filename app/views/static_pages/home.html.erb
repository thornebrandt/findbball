<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %> </div>
<% end %>
<div id="heroContainer">
    <div id="hero">
        <div>
            <%= image_tag "hero/hoop.jpg" %>
            <h2> <span id="h2_join">join.</span> <span class="h2_discover"> discover. </span> <br> <span class="blue ball">ball.</span></h2>
        </div>
        <div>
            <%= image_tag "hero/bench.jpg" %>
            <h2>Look out for our <br><span class="blue">mobile app</span></h2>
        </div>
        <div>
            <%= image_tag "hero/gear.jpg" %>
            <h2>10 reasons<br> why it's <span class="blue">time</span><br> to upgrade your gear</h2>
        </div>
        <div>
            <%= image_tag "hero/game.jpg" %>
            <h2 class="smaller">Basketball<br>is happening <span class="blue">now</span><br>Find a pick-up game!</h2>
        </div>
    </div>
    <div id="basketball_graphic_wrapper">
        <div id="basketball_graphic_container">
            <span id="basketball_graphic"></span>
        </div>
    </div>
</div>
<div id="content">
    <div id="featured">
        <div class="featured_cell">
            <%= image_tag "feature/1.jpg" %>
            <div class="feature_heading_container">
                <a href="#">Join a Pick-Up Game</a>
            </div>
        </div>
        <div class="featured_cell">
            <%= image_tag "feature/2.jpg" %>
              <div class="feature_heading_container">
                  <a href="#">Find a Pick-Up game starting shortly near you</a>
              </div>
        </div>
        <div class="featured_cell">
                <%= image_tag "feature/3.jpg" %>
              <div class="feature_heading_container">
                  <a href="#">Rate our members</a>
              </div>
        </div>
        <div class="featured_cell">
            <%= image_tag "feature/dumb.jpg" %>
              <div class="feature_heading_container">
                  <a href="#">5 exercises will improve your game</a>
              </div>
        </div>
    </div>
    <%= render 'ads/placeholder' %>
    <div id="heading_articles">
        <h3>VIDEOS</h3>
        <%= link_to "More >>", {:controller => "video_articles", :action => "index"}, class: "more" %>

    </div>
    <% @video_articles.each do |video_article| %>
        <%= render :partial => '/video_articles/video_article', :locals => {:video_article => video_article} %>
    <% end %>
</div>
<div id="noMap"></div>
