<div id="reviewsContainer">
	<h3>REVIEWS(<%= @court.reviews.count %>)</h3>
	<% if @court.reviews.any? %>
    			<%= render @shown_reviews %>
					<div id="hiddenReviews" >
					<!-- render some partials here -->
                	</div>
                	<a href="#" id="showReviews"><b>Show all <%= @court.reviews.count %> reviews</b></a> <!-- jquery not getting called -->
    <% else %>
    		<p class="profile_subtitle"><%= @court.name %> hasn't been reviewed yet</p>
    <% end %>
    <% if signed_in? %>
        <% if current_user.registered? %>
    	   <%= render 'reviews/review_form' %>
        <% else %>
            You must <b>verify your email</b> to post a review. <br>  <i>( Check your inbox for a verification link. )</i>
        <% end %>
    <% end %>
   </div>
   <div class="fb-comments" data-href="<%= request.original_url %>" data-width="427px" data-numposts="5" data-colorscheme="light"></div>
</div>
