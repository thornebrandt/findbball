<div id="reviews_container">
<% if @member.reviews.any? %>
    	<h3>REVIEWS(<%= @member.reviews.count %>)</h3>
    		<ul id="reviews">
    			<% @shown_reviews.each do |review| %>
    			<li>
					<%= link_to review.court.name, court_path(review.court), class: "review" %>
                    <br>
                    <%= link_to truncate(review.content, length: 15), court_path(review.court), class: "review_content" %>
				</li>
				<% end %>
				<div id="hiddenReviews" class="hide">
				<% @hidden_reviews.each do |review | %>
				<li>
					<%= link_to review.court.name, court_path(review.court), class: "review" %>
				</li>
				<% end %>
				<a href="#" id="hideReviews"><b>Show fewer reviews</b></a>
				</div>
    		</ul>
    <% else %>
    	<h3>REVIEWS(0)</h3>
    		<p class="profile_subtitle"><%= @member.name %> hasn't written any reviews</p>
    <% end %>
</div>