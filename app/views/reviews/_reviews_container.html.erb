<div id="reviews_container">
<% if @member.reviews.any? %>
    	<h3>REVIEWS(<%= @member.reviews.count %>)</h3>
    		<ul id="reviews">
    			<% @reviews.each do |review| %>
    			<li>
					<%= link_to review.court.name, court_path(review.court), class: "review" %>
				</li>
    		</ul>
    <% else %>
    	<h3>REVIEWS(0)</h3>
    		<p class="profile_subtitle"><%= @member.name %> hasn't written any reviews</p>
    <% end %>
</div>