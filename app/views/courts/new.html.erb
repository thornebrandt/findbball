<% provide(:title, "Add a court") %>
<h1>Add a court</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@court) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
		
			<%= f.label :name %>
			<%= f.text_field :name %>
			
			<%= f.label :address %>
			<%= f.text_field :address %>
			
			<%= f.submit "Add my court", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
