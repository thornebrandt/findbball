<% if @court.court_photos.count %>
    <h3>PHOTOS(<%= @court.court_photos.count %>)</h3>
    <div id="courtPhotos_container">
        <p id="courtPhotos">
            <% for court_photo in @court.court_photos %>
                <%= image_tag court_photo.photo.thumb.to_s, class: "courtPhoto" %>
            <% end %>
        </p>
    </div>
<% else %>
    <h3>No Photos Yet</h3>
<% end %>

<% if signed_in? %>
    <a href="#" id="upload_court_photo"><%= image_tag "icon/upload.png" %> Upload Photo</a>

    <%= form_for @court_photo, :html => { :multipart => true } do |f| %>
        <%= f.file_field :photo %>
        <%= f.hidden_field :court_id, :value => @court.id %>
        <%= f.hidden_field :member_id, :value => @current_user.id %>
        <%= f.submit "Upload" %>
    <% end %>
<% end %>

<%= render '/modals/gallery_modal' %>